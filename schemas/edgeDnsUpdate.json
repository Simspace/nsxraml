{
  "required": [
    "version",
    "enabled",
    "cacheSize",
    "logging",
    "dnsViews",
    "listeners"
  ],
  "type":"object",
  "properties": {
    "version": {
      "type":"string"
    },
    "enabled": {
      "type":"string"
    },
    "cacheSize": {
      "type":"string"
    },
    "logging": {
      "required": [
	"enable",
	"logLevel"
      ],
      "type":"object",
      "properties": {
	"enable": {
	  "type":"string"
	},
	"logLevel": {
	  "type":"string"
	}
      }
    },
    "dnsViews": {
      "required": [
	"dnsView"
      ],
      "type":"object",
